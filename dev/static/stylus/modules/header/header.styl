header
  width 100%
  height 80px
  display inline-table
  position relative
  z-index 1048
.header-container
  position relative
  height 80px
  z-index 100
  transition all linear .2s
  background-color transparent
  width 100%
  backdrop-filter blur(10px)

.header-container.header-fix
  position fixed
  top 0
  background-color rgba(54, 61, 74, 0.8)
.header-wrap
  display flex
  align-items center
  justify-content space-between
  font-family 'Montserrat SB',sans-serif
  height 80px
.header-logo
  .icon
    size(186px)
.header-profile--menu
  position relative
  margin-right 145px
  cursor pointer
  transition all linear .2s
  .icon
    size(18px)
.header-profile--menu--list
  position absolute
  display none
  top 48px
  right 0
  background: #363D4A;
  box-shadow: 0px 0px 40px rgba(27, 33, 43, 0.85);
  border-radius: 10px;
  padding 20px 15px
  width 268px
  padding-bottom 0
  z-index 200
.header-profile--menu--item
  display flex
  align-items center
  margin-bottom 30px

  .icon
    margin-right 15px
    size(22px)
  span
    font-size 15px
    font-family "Montserrat SB",sans-serif

.header-profile--menu--logout
  display flex
  align-items center
  background: #424B5B;
  border-radius: 12px;
  margin 0 -15px
  padding 18px 15px


  .icon
    size(22px)
    margin-right 15px

  span
    font-size 15px
    font-family "Montserrat SB",sans-serif
    color #FF4B55
.header-profile
  display flex
  align-items center
.header-profile--reg,header-profile--login
  margin-right 30px
  font-size 15px
  color #fff
  text-decoration none
  cursor pointer
.header-profile--login
  margin-right 0
  color #fff
  cursor pointer
.header-trip--wrap
  display flex
  align-items center
.header-trip--wrap__link
  font-size 15px
  color #FDAB3E
  margin-right 38px
  text-decoration none

  &:hover
    text-decoration none
    color #FDAB3E

  span
    color #fff

.header-profile--menu
  display flex
  align-items center
  justify-content center
  margin-right 40px
  background: #363D4A;
  border-radius: 10px;
  padding 11px

.header-profile--login
  background: #FDAB3E;
  border-radius: 25px;
  //background: linear-gradient(135deg, #f37335, #fdc830);
  padding 12px 35px
  transition all linear .2s
  &:hover
    box-shadow 0px 4px 11px 2px rgba(253,171,62, 0.3)

.header-user-profile--img
  size(50px)
  border-radius 10px
  margin-right 20px
  position relative
  transition all linear .2s
  background-position center
  background-repeat no-repeat
  background-size contain
  &:hover
    box-shadow 2px 2px 11px 4px rgba(253,171,62,0.3)

.header-user-profile--notific
  absolute-center()
  background-color #FDAB3E
  border-radius 5px
  font-family 'Oswald 500',sans-serif
  font-size 12px
  color #fff
  width max-content
  height 18px
  min-width 18px
  display flex
  align-items center
  justify-content center
  left auto
  right -17px
.header-user-profile
  margin-left 40px
.header-user-profile--link
  display flex
  align-items center

  span
    font-family 'Oswald 500',sans-serif
    font-size 22px
    color #fff