.car-place--content
  display flex

.car-place--svg
  width 100%
  height 100%
  height 460px

  .icon
    size(100%)
.car-place--position
  position relative


.car-place--svg--places
  position: absolute;
  cursor pointer
  opacity 0
  transition all linear .1s

  .icon
    size(100%)
    fill #fdab3ecc;
  .icon-car-place--booked
    display none

  &:hover
    opacity 1

.car-place--svg--places.active
  opacity 1
.car-place--booked
  opacity 1
  transition all linear .1s
  cursor default

  .icon
    display none
  .icon-car-place--booked
    fill #141414b5;
    display block
  &:hover

    &:before
      content attr(data-place-booked);
      absolute-center()
      top -26px
      background-color #464D5B
      border-radius 8px
      padding 5px 8px
      font-family 'Oswald 500',sans-serif
      font-size 12px
      color #fff
      white-space nowrap
      z-index 2
    &:after
      content ''
      size(14px)
      absolute-center()
      top -9px
      background-color #464D5B
      clip-path: polygon(100% 0, 0 0, 50% 94%);
      z-index 1


