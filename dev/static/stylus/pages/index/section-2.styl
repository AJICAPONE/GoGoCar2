
.plan-trip--title
  font-family 'Oswald 500',sans-serif
  font-size 30px
  color #fff
  text-align center
  margin-bottom 15px

  span
    color #FDAB3E
    font-size 30px
.plan-trip--desc
  text-align center
  font-family 'Montserrat 500',sans-serif
  font-size 16px
  color rgba(255, 255, 255, 0.5)
  width 100%
  max-width 400px
  margin 0 auto
  margin-bottom 50px
.plan-trip--wrap
  display flex
  align-items center
.plan-trip--baner
  padding-left 0
  position relative
  width 100%
  height 228px

  .icon
    width 87%
    height 100%

.plan-trip--info
  padding-right 0

.plan-trip--location__wrap
  display flex
  align-items center
  background: #363D4A;
  border-radius: 15px;
  position relative



.plan-trip--location__icon
  size(42px)
  min-width 42px


  .icon
    size(22px)

.plan-trip--location--submit
  size(42px)
  min-width 42px
  position absolute
  right 15px

  .icon
    size(16px)

.plan-trip--title--small
  font-family 'Oswald 500',sans-serif
  font-size 22px
  color #fff
  text-align center
  margin-bottom 15px
