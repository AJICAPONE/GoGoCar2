.trip-map-deploy
  position relative
  height 100%
  min-height calc(100vh - 80px)
.trip-map-deploy--map
  position absolute
  width 100%
  height: 100%;
  top 0
.trip-map--wrap
  position relative
  width 100%
  padding 60px 0

.trip-map--absolute
  position relative
  z-index 5
  background: rgba(54, 61, 74, 0.8);
  backdrop-filter: blur(12px);
  padding 30px 20px
  .suggest-late--inputs
    padding 0
    .suggest-late--result--item:before,.suggest-late--result--item:after
      display none
  .suggest-late--input--to
    background-color #7C8088
  .gogocar-gray-icons
    background-color #999A9E
  .suggest-late--result--item
    padding 15px 20px
    margin 0 -20px
    padding-right 20px

.trip-map--absolute
  .main-section--title
    font-size 22px
    margin-bottom 0

    span
      font-size 22px
.trip-map--buttons
  display flex
  .gogocar-yellow-button,.gogocar-gray-button
    width 170px
