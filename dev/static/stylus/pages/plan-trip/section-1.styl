.ready-plan-trip--info

  .gogocar-trip--item
    width 100%
    margin-bottom 0

.gogocar-ready-plan-trip--info
  position absolute
  width 100%
  display flex
  flex-direction column

.gogocar-plan-trip-driver-position--town,.gogocar-plan-trip-driver-position--time
  position relative
  width 100%
  display: inline-flex;
  padding 0 100px
.gogocar-plan-trip-driver-position--town
  top -16px
.gogocar-plan-trip-driver-position--time
  bottom -5px

.gogocar-plan-trip-driver-position--dot
  position relative
  width 100%
  display: inline-flex;

  &:before
    content ''
    position sticky
    size(11px)
    background-color #919BD3
    box-shadow 0px 0px 0px 3px rgba(145, 155, 211, 0.6)
    border-radius: 50%;

.gogocar-plan-trip-driver-position--town span,.gogocar-plan-trip-driver-position--time span
  position: sticky;
  display: inline-flex;
  font-family 'Oswald 500',sans-serif
  font-size 15px
  color #fff

.gogocar-plan-trip-driver-position--town span,.gogocar-plan-trip-driver-position--time span,.gogocar-plan-trip-driver-position--dot:before
  //left: calc(25.5% + -18vw);
  left calc(25% + 14%)


.gogocar-plan-trip-driver--wrap
  width 100%
  padding 0 25px
  position relative
  //overflow-y auto
.gogocar-ready-plan--km__place
  margin-right 60px
  .gogocar-trip--item__km
    margin-bottom 10px
    justify-content flex-start
    text-align left

.gogocar-ready-plan--place
  font-family 'Montserrat 400',sans-serif
  font-size 13px
  color #9A9EA4
  display flex
  align-items center
  .icon
    size(23px)
    fill #FDAB3E
    filter: drop-shadow(0px 0px 20px rgba(253, 191, 90, 0.2));
    margin-right 10px
.gogocar-ready-plan--car,.gogocar-ready-plan--covid
  margin-right 50px
  .gogocar-gray-icons
    position relative
    left auto
    size(42px)
    margin-right 15px
    .icon
      size(22px)

.gogocar-ready-plan--bottom
  display flex
  align-items center

.gogocar-ready-plan--car,.gogocar-ready-plan--covid
  display flex
  align-items center

  span
    display block

.gogocar-ready-plan--text
  font-family 'Oswald 400',sans-serif
  font-size 14px
  color #fff

.gogocar-ready-plan--covid--title
  font-family 'Oswald 500',sans-serif
  font-size 14px
  color #fff
  margin-bottom 3px

.gogocar-ready-plan--covid--desc
  font-family 'Montserrat 400',sans-serif
  font-size 11px
  color #9A9EA4

.gogocar-ready-plan--map__price
  display flex
  align-items center

  .gogocar-gray-icons
    position relative
    size(42px)
    left auto
    margin-right 30px
    cursor pointer
    .icon
      size(22px)

.gogocar-ready-plan__price
  font-family 'Oswald 500',sans-serif
  font-size 21px
  color #FDAB3E

.comment-driver--content
  display flex
  align-items center
  font-size 14px
  font-family 'Montserrat 500 italic',sans-serif
  color #fff
  padding 20px
  background: #363D4A;
  border-radius: 15px;
  position relative

  &:before
    content ''
    clip-path: polygon(50% 88%, 0 0, 100% 0);
    size(20px)
    background-color #363D4A
    position absolute
    left 40px
    bottom -18px

.comment-driver--border
  display block
  position: absolute
  background: #FDAB3E;
  box-shadow: 0px 0px 10px rgba(253, 171, 62, 0.2);
  width 4px
  height calc(100% - 40px)

.comment-driver--text
  padding-left 15px
